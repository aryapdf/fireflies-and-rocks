generator client {
  provider = "prisma-client-js"
  output = "./generated/client"
}

datasource db {
  provider = "sqlite"
}

model Project {
  id          String   @id @default(uuid())
  title       String
  description String
  liveUrl     String?
  githubUrl   String?
  techStack   Json?     @default("[]")
  featured    Boolean?  @default(false)
  order       Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([order])
  @@index([featured])
}

model Experience {
  id          String   @id @default(uuid())
  company     String
  role        String
  startDate   DateTime
  endDate     DateTime?
  description String?
  order       Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([order])
}

model Skill {
  id          String   @id @default(uuid())
  name        String   @unique
  category    String
  level       Int
  order       Int?

  @@index([category])
  @@index([order])
}
